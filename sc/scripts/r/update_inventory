    # Authenticated
sub shake_fetch {
    my ($event_id, $net_id) = @_;
    
    $net_id =~ s/^\-//;
    my $sc_id = $net_id;
    if ($net_id =~ /sc/i) {
	$sc_id = 'ci';
    } elsif ($net_id =~ /global/i) {
	$sc_id = 'us';
    }
    $sc_id .= $event_id;
    
    my $result = `$perlbin $sc_home/bin/manage_event.pl -delete -verbose $sc_id`;

    SC->log(0, "erase event: $sc_id, $result");
	
	my $cmd = "$perlbin $sc_home/bin/shake_fetch.pl -force_run -scenario -verbose -network $net_id -event $event_id";
	SC->log(0, $cmd);
	$result =  `$cmd`;
	
	my $json = {};
	$json->{prog} = $cmd;
	$json->{result} = $result;

	return $json;
}

    # Authenticated
sub atlas_fetch {
    my ($event_id) = @_;
    
    my $sc_id = $event_id;
    $sc_id =~ s/^\atlas//i;
    $sc_id = 'us'.$sc_id;
    
    my $result = `$perlbin $sc_home/bin/manage_event.pl -delete -verbose $sc_id`;

    SC->log(0, "erase event: $sc_id, $result");
	
	my $cmd = "$perlbin $sc_home/bin/gs_json.pl $event_id";
	SC->log(0, $cmd);
	$result =  `$cmd`;
	
	my $json = {};
	$json->{prog} = $cmd;
	$json->{result} = $result;

	return $json;
}

    # Authenticated
sub scenario_event {
	my ($filename) = @_;
	
	my $result = new API::Event->erase_event($filename);
	use File::Copy;
	$result = move ("$sc_home/tmp/$filename", "$data_home/$filename");
    SC->log(0, "scenario_event: $sc_home/tmp/$filename, $data_home/$filename, $result");
	
	my $bin_file = "$sc_home/bin/scfeed_local.pl -force_run -scenario -event ";
	my $cmd = "$perlbin $bin_file $filename";
	
	my $json = {};
	$json->{prog} = $cmd;
	$json->{result} = `$cmd -verbose`;

	return $json;
}

