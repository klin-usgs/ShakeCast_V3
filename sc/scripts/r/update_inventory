sub save_data_as_xml {
    my $data = shift || return;
    my $file = shift || return;
    my $new_raw_xml = XML::Simple::XMLout($data);
    SC->log(0, $new_raw_xml);
    my $parser = XML::LibXML->new();
    $parser->recover(1);
    my $new_node = $parser->parse_string($new_raw_xml);
    _save($new_node, $file);
}

sub _save {
    my $doc = shift;
    my $file = shift || return;
    $doc->toFile($file);
}

